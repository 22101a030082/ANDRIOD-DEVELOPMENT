import tkinter as tk
import time

# Stopwatch variables
running = False
start_time = 0
elapsed_time = 0

def update_timer():
    if running:
        global elapsed_time
        current_time = time.time()
        elapsed_time = current_time - start_time
        minutes = int(elapsed_time // 60)
        seconds = int(elapsed_time % 60)
        milliseconds = int((elapsed_time * 100) % 100)
        time_display.config(text=f"{minutes:02}:{seconds:02}:{milliseconds:02}")
        root.after(10, update_timer)

def start():
    global running, start_time
    if not running:
        running = True
        start_time = time.time() - elapsed_time
        update_timer()

def pause():
    global running
    running = False

def reset():
    global elapsed_time, running
    running = False
    elapsed_time = 0
    time_display.config(text="00:00:00")

# GUI Setup
root = tk.Tk()
root.title("Stopwatch App")
root.geometry("300x200")
root.resizable(False, False)

time_display = tk.Label(root, text="00:00:00", font=("Arial", 40), fg="black")
time_display.pack(pady=20)

btn_frame = tk.Frame(root)
btn_frame.pack()

start_btn = tk.Button(btn_frame, text="Start", width=10, command=start)
start_btn.grid(row=0, column=0, padx=5)

pause_btn = tk.Button(btn_frame, text="Pause", width=10, command=pause)
pause_btn.grid(row=0, column=1, padx=5)

reset_btn = tk.Button(btn_frame, text="Reset", width=10, command=reset)
reset_btn.grid(row=0, column=2, padx=5)

root.mainloop()
